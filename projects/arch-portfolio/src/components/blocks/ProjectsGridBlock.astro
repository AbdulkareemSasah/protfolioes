---
import { getCollection } from "astro:content";

interface Props {
    heading?: string;
    subheading?: string;
    filterByCategory?: string;
    count?: number;
    columns?: "2" | "3" | "4";
    showFilters?: boolean;
    viewProjectLabel?: string;
}

const {
    heading,
    subheading,
    filterByCategory,
    count = 6,
    columns = "3",
    showFilters = true,
    viewProjectLabel = "عرض المشروع",
} = Astro.props;

// Fetch projects
let projects = await getCollection("projects");

// Filter by category if specified
if (filterByCategory) {
    projects = projects.filter((p) => p.data.category === filterByCategory);
}

// Limit count
projects = projects.slice(0, count);

// Get unique categories for filters
const categories = await getCollection("categories");

const gridCols: Record<string, string> = {
    "2": "grid-cols-2",
    "3": "grid-cols-3",
    "4": "grid-cols-4",
};
---

<section class="projects-section section">
    <div class="container">
        {
            (heading || subheading) && (
                <div class="section-header">
                    {heading && <h2 class="section-title">{heading}</h2>}
                    {subheading && <p class="section-subtitle">{subheading}</p>}
                </div>
            )
        }

        {
            showFilters && categories.length > 0 && (
                <div class="filters" id="project-filters">
                    <button class="filter-btn active" data-filter="all">
                        الكل
                    </button>
                    {categories.map((cat) => (
                        <button class="filter-btn" data-filter={cat.slug}>
                            {cat.data.name}
                        </button>
                    ))}
                </div>
            )
        }

        <div class={`projects-grid ${gridCols[columns]}`} id="projects-grid">
            {
                projects.map((project, index) => (
                    <article
                        class="project-card"
                        data-category={project.data.category || "uncategorized"}
                        style={`animation-delay: ${index * 0.1}s`}
                    >
                        <a
                            href={`/projects/${project.id.replace(/\.[^/.]+$/, "")}`}
                            class="project-link"
                        >
                            <div class="project-image-wrapper">
                                {project.data.featuredImage && (
                                    <img
                                        src={project.data.featuredImage}
                                        alt={project.data.title}
                                        class="project-image"
                                        loading="lazy"
                                    />
                                )}
                                <div class="project-overlay">
                                    <span class="project-view">
                                        {viewProjectLabel}
                                    </span>
                                </div>
                            </div>
                            <div class="project-content">
                                <h3 class="project-title">
                                    {project.data.title}
                                </h3>
                                {project.data.description && (
                                    <p class="project-description">
                                        {project.data.description}
                                    </p>
                                )}
                                <div class="project-meta">
                                    {project.data.location && (
                                        <span class="project-location">
                                            <svg
                                                width="14"
                                                height="14"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                            >
                                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                                                <circle cx="12" cy="10" r="3" />
                                            </svg>
                                            {project.data.location}
                                        </span>
                                    )}
                                    {project.data.year && (
                                        <span class="project-year">
                                            {project.data.year}
                                        </span>
                                    )}
                                </div>
                            </div>
                        </a>
                    </article>
                ))
            }
        </div>

        {
            projects.length === 0 && (
                <div class="no-projects">
                    <p>لا توجد مشاريع حالياً</p>
                </div>
            )
        }
    </div>
</section>

<style>
    .projects-section {
        background: var(--color-background);
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-title {
        margin-bottom: 1rem;
    }

    .section-subtitle {
        max-width: 600px;
        margin: 0 auto;
    }

    .filters {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 3rem;
    }

    .filter-btn {
        padding: 0.75rem 1.5rem;
        font-family: var(--font-body);
        font-size: 0.95rem;
        font-weight: 500;
        color: var(--color-text-muted);
        background: var(--color-surface);
        border: 2px solid transparent;
        border-radius: var(--radius-base);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .filter-btn:hover,
    .filter-btn.active {
        color: var(--color-text);
        border-color: var(--color-accent);
        background: rgba(233, 69, 96, 0.1);
    }

    .projects-grid {
        display: grid;
        gap: 2rem;
    }

    .grid-cols-2 {
        grid-template-columns: repeat(2, 1fr);
    }

    .grid-cols-3 {
        grid-template-columns: repeat(3, 1fr);
    }

    .grid-cols-4 {
        grid-template-columns: repeat(4, 1fr);
    }

    .project-card {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 0.6s ease forwards;
        transition:
            opacity 0.3s ease,
            transform 0.3s ease;
    }

    .project-card.hidden {
        display: none;
    }

    .project-link {
        display: block;
        text-decoration: none;
        color: inherit;
        background: var(--color-surface);
        border-radius: var(--radius-lg);
        overflow: hidden;
        transition: all 0.4s ease;
    }

    .project-link:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    }

    .project-image-wrapper {
        position: relative;
        aspect-ratio: 16/10;
        overflow: hidden;
    }

    .project-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .project-link:hover .project-image {
        transform: scale(1.1);
    }

    .project-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to top,
            rgba(15, 15, 26, 0.9) 0%,
            rgba(15, 15, 26, 0) 50%
        );
        display: flex;
        align-items: flex-end;
        justify-content: center;
        padding-bottom: 1.5rem;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .project-link:hover .project-overlay {
        opacity: 1;
    }

    .project-view {
        padding: 0.5rem 1.25rem;
        background: var(--color-accent);
        color: white;
        font-size: 0.9rem;
        font-weight: 500;
        border-radius: var(--radius-base);
        transform: translateY(20px);
        transition: transform 0.3s ease;
    }

    .project-link:hover .project-view {
        transform: translateY(0);
    }

    .project-content {
        padding: 1.5rem;
    }

    .project-title {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        transition: color 0.3s ease;
    }

    .project-link:hover .project-title {
        color: var(--color-accent);
    }

    .project-description {
        font-size: 0.95rem;
        color: var(--color-text-muted);
        margin-bottom: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .project-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.85rem;
        color: var(--color-text-muted);
    }

    .project-location {
        display: flex;
        align-items: center;
        gap: 0.35rem;
    }

    .no-projects {
        text-align: center;
        padding: 4rem;
        background: var(--color-surface);
        border-radius: var(--radius-lg);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 1024px) {
        .grid-cols-4 {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 768px) {
        .projects-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .filters {
            gap: 0.5rem;
        }

        .filter-btn {
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
        }

        .project-content {
            padding: 1rem;
        }

        .project-title {
            font-size: 1rem;
        }
    }

    @media (max-width: 480px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    const filters = document.getElementById("project-filters");
    const grid = document.getElementById("projects-grid");

    if (filters && grid) {
        const filterBtns = filters.querySelectorAll(".filter-btn");
        const projects = grid.querySelectorAll(".project-card");

        filterBtns.forEach((btn) => {
            btn.addEventListener("click", () => {
                // Update active state
                filterBtns.forEach((b) => b.classList.remove("active"));
                btn.classList.add("active");

                const filter = btn.getAttribute("data-filter");

                projects.forEach((project, index) => {
                    const category = project.getAttribute("data-category");

                    if (filter === "all" || category === filter) {
                        project.classList.remove("hidden");
                        (project as HTMLElement).style.animationDelay =
                            `${index * 0.05}s`;
                    } else {
                        project.classList.add("hidden");
                    }
                });
            });
        });
    }
</script>
