---
import { getCollection } from "astro:content";

interface Props {
    heading?: string;
    subheading?: string;
    showAll?: boolean;
    selectedServices?: string[];
    cardStyle?: "minimal" | "icon" | "image";
    readMoreLabel?: string;
}

const {
    heading,
    subheading,
    showAll = true,
    selectedServices = [],
    cardStyle = "icon",
    readMoreLabel = "اقرأ المزيد",
} = Astro.props;

// Fetch services
let services = await getCollection("services");

if (!showAll && selectedServices.length > 0) {
    services = services.filter((s) =>
        selectedServices.includes(s.data.slug || s.id),
    );
}

// Sort by order
services = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Icons mapping (using simple SVG icons)
const defaultIcon = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>`;
---

<section class="services-section section">
    <div class="container">
        {
            (heading || subheading) && (
                <div class="section-header">
                    {heading && <h2 class="section-title">{heading}</h2>}
                    {subheading && <p class="section-subtitle">{subheading}</p>}
                </div>
            )
        }

        <div class={`services-grid style-${cardStyle}`}>
            {
                services.map((service, index) => (
                    <article
                        class="service-card"
                        style={`animation-delay: ${index * 0.1}s`}
                    >
                        <a
                            href={`/services/${service.id.replace(/\.[^/.]+$/, "")}`}
                            class="service-link"
                        >
                            {cardStyle === "image" &&
                                service.data.featuredImage && (
                                    <div class="service-image-wrapper">
                                        <img
                                            src={service.data.featuredImage}
                                            alt={service.data.title}
                                            class="service-image"
                                            loading="lazy"
                                        />
                                    </div>
                                )}

                            <div class="service-content">
                                {cardStyle === "icon" && (
                                    <div
                                        class="service-icon"
                                        set:html={defaultIcon}
                                    />
                                )}

                                <h3 class="service-title">
                                    {service.data.title}
                                </h3>

                                {service.data.description && (
                                    <p class="service-description">
                                        {service.data.description}
                                    </p>
                                )}

                                <span class="service-cta">
                                    {readMoreLabel}
                                    <svg
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <line x1="19" y1="12" x2="5" y2="12" />
                                        <polyline points="12 19 5 12 12 5" />
                                    </svg>
                                </span>
                            </div>
                        </a>
                    </article>
                ))
            }
        </div>

        {
            services.length === 0 && (
                <div class="no-services">
                    <p>لا توجد خدمات حالياً</p>
                </div>
            )
        }
    </div>
</section>

<style>
    .services-section {
        background: var(--color-background);
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-title {
        margin-bottom: 1rem;
    }

    .section-subtitle {
        max-width: 600px;
        margin: 0 auto;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .service-card {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 0.6s ease forwards;
    }

    .service-link {
        display: flex;
        flex-direction: column;
        height: 100%;
        text-decoration: none;
        color: inherit;
        background: var(--color-surface);
        border-radius: var(--radius-lg);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.4s ease;
    }

    .service-link:hover {
        transform: translateY(-8px);
        border-color: var(--color-accent);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
    }

    .service-image-wrapper {
        aspect-ratio: 16/9;
        overflow: hidden;
    }

    .service-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .service-link:hover .service-image {
        transform: scale(1.1);
    }

    .service-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        padding: 2rem;
    }

    .service-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(
            135deg,
            var(--color-accent) 0%,
            color-mix(in srgb, var(--color-accent) 70%, var(--color-primary))
                100%
        );
        border-radius: var(--radius-base);
        margin-bottom: 1.5rem;
        color: white;
    }

    .service-icon :global(svg) {
        width: 28px;
        height: 28px;
    }

    .service-title {
        font-size: 1.35rem;
        margin-bottom: 0.75rem;
        transition: color 0.3s ease;
    }

    .service-link:hover .service-title {
        color: var(--color-accent);
    }

    .service-description {
        flex: 1;
        font-size: 0.95rem;
        color: var(--color-text-muted);
        line-height: 1.7;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .service-cta {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1.5rem;
        font-weight: 600;
        color: var(--color-accent);
        transition: gap 0.3s ease;
    }

    .service-link:hover .service-cta {
        gap: 1rem;
    }

    /* Minimal style */
    .style-minimal .service-content {
        padding: 2rem;
    }

    .style-minimal .service-link {
        background: transparent;
        border: 2px solid var(--color-surface);
    }

    .style-minimal .service-link:hover {
        background: var(--color-surface);
    }

    .no-services {
        text-align: center;
        padding: 4rem;
        background: var(--color-surface);
        border-radius: var(--radius-lg);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .services-grid {
            grid-template-columns: 1fr;
        }

        .service-content {
            padding: 1.5rem;
        }
    }
</style>
