---
interface TimelineEvent {
    year: string;
    title: string;
    description?: string;
}

interface Props {
    heading?: string;
    events: TimelineEvent[];
    style?: "vertical" | "horizontal";
}

const { heading, events = [], style = "vertical" } = Astro.props;
---

<section class="timeline-section section">
    <div class="container">
        {
            heading && (
                <div class="section-header">
                    <h2 class="section-title">{heading}</h2>
                </div>
            )
        }

        <div class={`timeline timeline-${style}`}>
            {
                events.map((event, index) => (
                    <div
                        class="timeline-item"
                        style={`animation-delay: ${index * 0.15}s`}
                        data-index={index}
                    >
                        <div class="timeline-marker">
                            <span class="timeline-dot" />
                        </div>
                        <div class="timeline-content">
                            <span class="timeline-year">{event.year}</span>
                            <h3 class="timeline-title">{event.title}</h3>
                            {event.description && (
                                <p class="timeline-description">
                                    {event.description}
                                </p>
                            )}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .timeline-section {
        background: var(--color-background);
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    /* Vertical Timeline */
    .timeline-vertical {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
    }

    .timeline-vertical::before {
        content: "";
        position: absolute;
        top: 0;
        right: 50%;
        transform: translateX(50%);
        width: 2px;
        height: 100%;
        background: linear-gradient(
            to bottom,
            var(--color-accent),
            var(--color-surface)
        );
    }

    .timeline-vertical .timeline-item {
        position: relative;
        width: 50%;
        padding: 0 3rem 3rem;
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 0.6s ease forwards;
    }

    .timeline-vertical .timeline-item:nth-child(odd) {
        margin-right: auto;
        text-align: left;
        padding-left: 0;
        padding-right: 3rem;
    }

    .timeline-vertical .timeline-item:nth-child(even) {
        margin-left: auto;
        text-align: right;
        padding-right: 0;
        padding-left: 3rem;
    }

    .timeline-vertical .timeline-marker {
        position: absolute;
        top: 0;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .timeline-vertical .timeline-item:nth-child(odd) .timeline-marker {
        left: auto;
        right: -10px;
    }

    .timeline-vertical .timeline-item:nth-child(even) .timeline-marker {
        right: auto;
        left: -10px;
    }

    .timeline-dot {
        width: 16px;
        height: 16px;
        background: var(--color-accent);
        border-radius: 50%;
        border: 3px solid var(--color-background);
        transition: transform 0.3s ease;
    }

    .timeline-item:hover .timeline-dot {
        transform: scale(1.3);
    }

    .timeline-content {
        background: var(--color-surface);
        padding: 1.5rem;
        border-radius: var(--radius-lg);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
    }

    .timeline-item:hover .timeline-content {
        border-color: var(--color-accent);
        transform: translateY(-5px);
    }

    .timeline-year {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: var(--color-accent);
        color: white;
        font-size: 0.85rem;
        font-weight: 600;
        border-radius: var(--radius-base);
        margin-bottom: 0.75rem;
    }

    .timeline-title {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        color: var(--color-text);
    }

    .timeline-description {
        font-size: 0.95rem;
        color: var(--color-text-muted);
        line-height: 1.6;
        margin: 0;
    }

    /* Horizontal Timeline */
    .timeline-horizontal {
        display: flex;
        overflow-x: auto;
        padding-bottom: 2rem;
        gap: 2rem;
        -webkit-overflow-scrolling: touch;
    }

    .timeline-horizontal::-webkit-scrollbar {
        height: 6px;
    }

    .timeline-horizontal::-webkit-scrollbar-track {
        background: var(--color-surface);
        border-radius: 3px;
    }

    .timeline-horizontal::-webkit-scrollbar-thumb {
        background: var(--color-accent);
        border-radius: 3px;
    }

    .timeline-horizontal .timeline-item {
        flex: 0 0 300px;
        opacity: 0;
        transform: translateX(-30px);
        animation: slideIn 0.6s ease forwards;
    }

    .timeline-horizontal .timeline-marker {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .timeline-horizontal .timeline-marker::after {
        content: "";
        flex: 1;
        height: 2px;
        background: var(--color-surface);
    }

    .timeline-horizontal .timeline-content {
        background: var(--color-surface);
        padding: 1.5rem;
        border-radius: var(--radius-lg);
        height: 100%;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @media (max-width: 768px) {
        .timeline-vertical::before {
            right: auto;
            left: 0;
        }

        .timeline-vertical .timeline-item,
        .timeline-vertical .timeline-item:nth-child(odd),
        .timeline-vertical .timeline-item:nth-child(even) {
            width: 100%;
            text-align: right;
            padding-right: 0;
            padding-left: 2.5rem;
        }

        .timeline-vertical .timeline-item:nth-child(odd) .timeline-marker,
        .timeline-vertical .timeline-item:nth-child(even) .timeline-marker {
            right: auto;
            left: -8px;
        }

        .timeline-horizontal .timeline-item {
            flex: 0 0 260px;
        }
    }
</style>
