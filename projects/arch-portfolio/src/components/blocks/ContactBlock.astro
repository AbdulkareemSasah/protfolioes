---
interface Props {
    heading?: string;
    subheading?: string;
    showForm?: boolean;
    showInfo?: boolean;
    showMap?: boolean;
    mapEmbedUrl?: string;
    phone?: string;
    email?: string;
    address?: string;
    labels?: {
        formNameLabel?: string;
        formEmailLabel?: string;
        formPhoneLabel?: string;
        formMessageLabel?: string;
        submit?: string;
        formSuccessMessage?: string;
    };
}

const {
    heading,
    subheading,
    showForm = true,
    showInfo = true,
    showMap = true,
    mapEmbedUrl,
    phone,
    email,
    address,
    labels = {},
} = Astro.props;

const {
    formNameLabel = "الاسم الكامل",
    formEmailLabel = "البريد الإلكتروني",
    formPhoneLabel = "رقم الهاتف",
    formMessageLabel = "الرسالة",
    submit = "إرسال",
    formSuccessMessage = "شكراً لتواصلك معنا! سنرد عليك قريباً.",
} = labels;
---

<section class="contact-section section">
    <div class="container">
        {
            (heading || subheading) && (
                <div class="section-header">
                    {heading && <h2 class="section-title">{heading}</h2>}
                    {subheading && <p class="section-subtitle">{subheading}</p>}
                </div>
            )
        }

        <div class="contact-grid">
            {
                showForm && (
                    <div class="contact-form-wrapper">
                        <form class="contact-form" id="contact-form">
                            <div class="form-group">
                                <label for="name" class="form-label">
                                    {formNameLabel}
                                </label>
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    class="form-input"
                                    required
                                />
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="email" class="form-label">
                                        {formEmailLabel}
                                    </label>
                                    <input
                                        type="email"
                                        id="email"
                                        name="email"
                                        class="form-input"
                                        required
                                    />
                                </div>

                                <div class="form-group">
                                    <label for="phone" class="form-label">
                                        {formPhoneLabel}
                                    </label>
                                    <input
                                        type="tel"
                                        id="phone"
                                        name="phone"
                                        class="form-input"
                                        dir="ltr"
                                    />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="message" class="form-label">
                                    {formMessageLabel}
                                </label>
                                <textarea
                                    id="message"
                                    name="message"
                                    class="form-textarea"
                                    rows="5"
                                    required
                                />
                            </div>

                            <button
                                type="submit"
                                class="btn btn-primary btn-submit"
                            >
                                <span class="btn-text">{submit}</span>
                                <svg
                                    class="btn-icon"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <line x1="22" y1="2" x2="11" y2="13" />
                                    <polygon points="22 2 15 22 11 13 2 9 22 2" />
                                </svg>
                                <span class="btn-loader" />
                            </button>

                            <div class="form-message success" id="form-success">
                                <svg
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                    <polyline points="22 4 12 14.01 9 11.01" />
                                </svg>
                                <p>{formSuccessMessage}</p>
                            </div>
                        </form>
                    </div>
                )
            }

            {
                (showInfo || showMap) && (
                    <div class="contact-info-wrapper">
                        {showInfo && (phone || email || address) && (
                            <div class="contact-info">
                                {phone && (
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <svg
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                            >
                                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                                            </svg>
                                        </div>
                                        <div class="info-content">
                                            <span class="info-label">
                                                الهاتف
                                            </span>
                                            <a
                                                href={`tel:${phone}`}
                                                class="info-value"
                                                dir="ltr"
                                            >
                                                {phone}
                                            </a>
                                        </div>
                                    </div>
                                )}

                                {email && (
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <svg
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                            >
                                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                                <polyline points="22,6 12,13 2,6" />
                                            </svg>
                                        </div>
                                        <div class="info-content">
                                            <span class="info-label">
                                                البريد الإلكتروني
                                            </span>
                                            <a
                                                href={`mailto:${email}`}
                                                class="info-value"
                                            >
                                                {email}
                                            </a>
                                        </div>
                                    </div>
                                )}

                                {address && (
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <svg
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                            >
                                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                                                <circle cx="12" cy="10" r="3" />
                                            </svg>
                                        </div>
                                        <div class="info-content">
                                            <span class="info-label">
                                                العنوان
                                            </span>
                                            <span class="info-value">
                                                {address}
                                            </span>
                                        </div>
                                    </div>
                                )}
                            </div>
                        )}

                        {showMap && mapEmbedUrl && (
                            <div class="map-wrapper">
                                <iframe
                                    src={mapEmbedUrl}
                                    width="100%"
                                    height="100%"
                                    style="border:0;"
                                    allowfullscreen=""
                                    loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade"
                                    title="Location Map"
                                />
                            </div>
                        )}
                    </div>
                )
            }
        </div>
    </div>
</section>

<style>
    .contact-section {
        background: var(--color-background);
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-title {
        margin-bottom: 1rem;
    }

    .section-subtitle {
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: start;
    }

    .contact-form-wrapper {
        background: var(--color-surface);
        padding: 3rem;
        border-radius: var(--radius-lg);
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .btn-submit {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        width: 100%;
        padding: 1rem;
        position: relative;
    }

    .btn-loader {
        display: none;
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    .btn-submit.loading .btn-text,
    .btn-submit.loading .btn-icon {
        display: none;
    }

    .btn-submit.loading .btn-loader {
        display: block;
    }

    .form-message {
        display: none;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        margin-top: 1.5rem;
        border-radius: var(--radius-base);
        animation: fadeIn 0.3s ease;
    }

    .form-message.success {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #22c55e;
    }

    .form-message.show {
        display: flex;
    }

    .form-message p {
        margin: 0;
        color: inherit;
    }

    .contact-info-wrapper {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 2rem;
        background: var(--color-surface);
        border-radius: var(--radius-lg);
    }

    .info-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .info-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        background: rgba(233, 69, 96, 0.1);
        border-radius: var(--radius-base);
        color: var(--color-accent);
        flex-shrink: 0;
    }

    .info-content {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .info-label {
        font-size: 0.85rem;
        color: var(--color-text-muted);
    }

    .info-value {
        font-size: 1.05rem;
        color: var(--color-text);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a.info-value:hover {
        color: var(--color-accent);
    }

    .map-wrapper {
        height: 300px;
        border-radius: var(--radius-lg);
        overflow: hidden;
        background: var(--color-surface);
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 1024px) {
        .contact-grid {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 768px) {
        .contact-form-wrapper {
            padding: 2rem;
        }

        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    const form = document.getElementById("contact-form") as HTMLFormElement;
    const successMessage = document.getElementById("form-success");

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const submitBtn = form.querySelector(".btn-submit");
        submitBtn?.classList.add("loading");

        // Simulate form submission (replace with actual API call)
        await new Promise((resolve) => setTimeout(resolve, 1500));

        submitBtn?.classList.remove("loading");
        successMessage?.classList.add("show");
        form.reset();

        // Hide success message after 5 seconds
        setTimeout(() => {
            successMessage?.classList.remove("show");
        }, 5000);
    });
</script>
